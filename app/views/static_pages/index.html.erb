<div class="row">
  <div class="col-md-8">
    <h1>Search</h1>
    <%= debug @call %>
    <%= form_tag('/', method: :get, :class => 'form-horizontal') do %>
      <div class="form-group">
	<%= label_tag 'Flickr ID', nil, class: 'col-md-2 control-label' %>
	<div class="col-md-8">
	  <%= text_field_tag 'flickr_id', nil, class: 'form-control' %>
	</div>
      </div>
      <div class="form-group">
	<div class="col-md-offset-2 col-sm-2">
	  <button type="submit" class="btn btn-default">Search</button>
	</div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= render_flickr_sidebar('12864272@N02') %>
  </div>
</div>
